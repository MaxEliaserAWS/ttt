<?xml version="1.0" encoding="utf-8"?>
<tt xml:lang="ja" xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter" ttp:profile="ttml2-presentation"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:model="ttml2">
<head>
<styling>
<initial tts:fontSize="4rh"/>
<initial tts:lineHeight="5rh"/>
<initial tts:showBackground="whenActive"/>
<style xml:id="s1" tts:textAlign="center"/>
<style xml:id="s2" tts:textAlign="start"/>
<style xml:id="s3" tts:textEmphasis="dot before"/>
<style xml:id="s4" tts:textEmphasis="dot after"/>
<style xml:id="s5" tts:textEmphasis="dot"/>
<style xml:id="s6" tts:textEmphasis="sesame"/>
<style xml:id="s7" tts:textEmphasis="sesame before"/>
<style xml:id="s8" tts:textEmphasis="sesame after"/>
</styling>
<layout>
<region xml:id="横下" tts:displayAlign="center" tts:extent="80rw 15rh" tts:position="center bottom 5rh"/>
<region xml:id="縦右" tts:displayAlign="center" tts:extent="15rw 80rh" tts:position="right 5rh center" tts:writingMode="tbrl"/>
</layout>
</head>
<body region="横下" tts:fontFamily="Noto Sans">
<div>
<p begin="00:00:01:00" end="00:00:02:00" style="s1"><span style="s2"><span style="s3">above</span></span></p>
<p begin="00:00:02:00" end="00:00:03:00" style="s1"><span style="s2"><span style="s4">below</span></span></p>
<p begin="00:00:03:00" end="00:00:04:00" style="s1"><span style="s2"><span style="s5">right</span></span></p>
<p begin="00:00:04:00" end="00:00:05:00" style="s1"><span style="s2"><span style="s5">left</span></span></p>
<p begin="00:00:05:00" end="00:00:06:00" style="s1"><span style="s2"><span style="s5">default</span></span></p>
<p begin="00:00:06:00" end="00:00:07:00" region="縦右" style="s1"><span style="s2"><span style="s6">above</span></span></p>
<p begin="00:00:07:00" end="00:00:08:00" region="縦右" style="s1"><span style="s2"><span style="s6">below</span></span></p>
<p begin="00:00:08:00" end="00:00:09:00" region="縦右" style="s1"><span style="s2"><span style="s7">right</span></span></p>
<p begin="00:00:09:00" end="00:00:10:00" region="縦右" style="s1"><span style="s2"><span style="s8">left</span></span></p>
<p begin="00:00:10:00" end="00:00:11:00" region="縦右" style="s1"><span style="s2"><span style="s6">default</span></span></p>
<p begin="00:00:11:00" end="00:00:12:00" region="縦右" style="s1"><span style="s2"><span style="s7">right</span></span></p>
</div>
</body>
</tt>
