<?xml version="1.0" encoding="UTF-8"?>
<!-- valid - tts:textShadow property permitted with imsc11 text profile -->
<tt xml:lang="en"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    ttp:profile="http://www.w3.org/ns/ttml/profile/imsc1.1/text"
    tts:extent="640px 480px"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="imsc11">
  <head>
    <layout>
      <region xml:id="r1" tts:extent="640px 480px">
        <!-- legal #textShadow values (not exhaustive) -->
        <style tts:textShadow="none"/>
        <style tts:textShadow="1px 1px"/>
        <style tts:textShadow="-1px 1px"/>
        <style tts:textShadow="1px -1px"/>
        <style tts:textShadow="-1px -1px"/>
        <style tts:textShadow="1px 1px red"/>
        <style tts:textShadow="1px 1px 1px"/>
        <style tts:textShadow="1px 1px 1px red"/>
        <style tts:textShadow="1px 1px, 2px 2px"/>
        <style tts:textShadow="1px 1px red, 2px 2px red"/>
        <style tts:textShadow="1px 1px 1px, 2px 2px 2px"/>
        <style tts:textShadow="1px 1px 1px red, 2px 2px 2px red"/>
      </region>
    </layout>
  </head>
  <body region="r1" begin="0s" end="1s">
    <div>
      <p>Text 1</p>
    </div>
  </body>
</tt>
